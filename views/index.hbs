<div id="photos" class="photos">
    {{#each files}}
        <img src="files/{{this}}" class="photo" />
    {{else}}
        Oh no, no pics.
    {{/each}}
</div>

<div id="qr-code" class="qr-code"></div>

<script src="/scripts/qrcodejs/qrcode.js"></script>
<script src="/scripts/packery/packery.pkgd.js"></script>
<script src="/scripts/imagesloaded/imagesloaded.pkgd.js"></script>
<script type="application/javascript">
    const $photosContainer = document.getElementById("photos");

    imagesLoaded($photosContainer, () => {
        const packery = new Packery($photosContainer, {
            itemSelector: '.photo',
            percentPosition: true
        });

        const eventSource = new EventSource("/upload/events");

        eventSource.addEventListener('new_file', e => {
            const filename = JSON.parse(e.data);

            const $image = document.createElement('img');
            $image.setAttribute("src", "files/" + filename);
            $image.classList.add('photo');
            $photosContainer.prepend($image);

            $image.onload = () => {
                packery.prepended($image);
            };
        });
    });

    $qrCode = document.getElementById('qr-code');
    new QRCode($qrCode, window.location.href + "upload");
</script>